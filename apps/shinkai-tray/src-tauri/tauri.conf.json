{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "shinkai-tray",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "startDragging": true,
        "close": true
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.shinkai.tray",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "10.13"
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "transparent": true,
        "title": "Shinkai",
        "minWidth": 1000,
        "minHeight": 200,
        "fullscreen": false,
        "decorations": false,
        "resizable": false
      }
    ],
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
