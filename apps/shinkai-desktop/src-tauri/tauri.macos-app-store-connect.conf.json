{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Shinkai Desktop",
    "version": "../../../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "fs": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          { "name": "bin/shinkai-node", "sidecar": true },
          { "name": "bin/ollama", "sidecar": true }
        ]
      },
      "window": {
        "startDragging": true,
        "close": true,
        "create": true,
        "setFocus": true
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "path": {
        "all": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "http://localhost"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.shinkai.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "minimumSystemVersion": "12.0",
        "entitlements": "./entitlements.plist"
      },
      "externalBin": [
        "bin/shinkai-node",
        "bin/ollama"
      ],
      "category": "Productivity"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "transparent": true,
        "title": "Shinkai Desktop",
        "width": 1000,
        "height": 750,
        "resizable": true,
        "fileDropEnabled": false
      }
    ],
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/icon.png"
    },
    "updater": {
      "active": false
    }
  }
}
